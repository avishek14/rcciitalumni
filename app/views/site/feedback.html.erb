<h2>Feedback Form</h2>
<%= form_tag site_send_feedback_path do %>
	<%= label_tag :name, "Name:" %><br/>
	<%= text_field_tag :name %>
	<br/><br/>
	<%= label_tag :email, "Email:" %><br/>
	<%= email_field_tag :email %>
	<br/><br/>
	<%= label_tag :subject, "Subject:" %><br/>
	<%= text_field_tag :subject %>
	<br/><br/>
	<%= label_tag :body, "Body:" %><br/>
	<%= textile_editor_tag :body, nil, size: "125x17" %>
	<br/><br/>
	<%= textile_editor_initialize %>
	<%= submit_tag "Send Feedback", id: 'send_feedback', class: 'button' %>
<% end %>