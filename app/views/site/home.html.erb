<%= javascript_include_tag :jquery_cycle_lite %>
<%= javascript_include_tag :home %>
<%= javascript_include_tag :jquery_simplyscroll_min %>

<div class = 'home-wrapper'>
	<div class = 'error-message'>
		<%= flash[:error] if flash[:error] %>
	</div>
	<div class = 'confirm-message'>
		<%= flash[:message] if flash[:message] %>
	</div>

	<div id = 'slideshowContainer'>
		<div class = 'slideshow'>
			<% GalleryImages.all.each do |gi| %>
				<%= image_tag gi.gallery_image.to_s, size: "540x440" %>
			<% end %>
		</div>
	</div>

<div class = 'scrollers'>
	<div class = 'event-list'>
		<ul id = 'scrollable'>
			<% @events.each do |e| %>
				<%= link_to event_event_one_path id: e.id do %><li>
					<span class = 'title'><%= e.title %></span>
					<span class = 'date'><%= e.date_on.strftime "...%d/%m/%Y" %></span>
				<% end %></li>
			<% end %>
		</ul>
	</div>

	<div class = 'daily-list'>
		<ul id = 'scrollabled'>
			<% @dailybs.each do |d| %>
				<li>
					<%= link_to user_page_path(id: d.id) do %>
						<span class = 'title'>Today is <%= "#{d.fname} #{d.lname}'s" %> birthday!</span>
					<% end %>
				</li>
			<% end %>
			<% @daily.each do |d| %>
				<li>
					<span class = 'title'><%= d %></span>
				</li>
			<% end %>
		</ul>
	</div>
</div>
</div>

